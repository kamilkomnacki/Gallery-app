<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_graph"
    app:startDestination="@id/fragment_gallery">

    <fragment
        android:id="@+id/fragment_gallery"
        android:name="komnacki.gallery.login.ui.gallery.GalleryFragment"
        android:label="GalleryFragment">
        <action
            android:id="@+id/toLoginFragment"
            app:destination="@+id/fragment_login"/>
        <action
            android:id="@+id/toDetailFragment"
            app:destination="@+id/fragment_detail"/>
    </fragment>

    <fragment
        android:id="@+id/fragment_login"
        android:name="komnacki.gallery.login.ui.login.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@id/toDetailFragment"
            app:destination="@id/fragment_detail"/>
    </fragment>

    <fragment
        android:id="@+id/fragment_detail"
        android:name="komnacki.gallery.login.ui.detail.DetailFragment"
        android:label="DetailFragment">
    </fragment>

</navigation>